<metro:MetroWindow x:Class="WirtualnyOgrod.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
                  Title="Wirtualny Ogród"
                  Height="450" Width="800"
                  ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#D0E1F9"/>
            <Setter Property="Foreground" Value="DarkSlateGray"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="10,10,10,10"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="BorderElement" Background="{TemplateBinding Background}" CornerRadius="10" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BorderElement" Property="Background" Value="#B9CDF5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SpecialButtonStyle" BasedOn="{StaticResource NavButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#A5A5A5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10,10,10,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="SpecialBorderElement" Background="{TemplateBinding Background}" CornerRadius="10" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="SpecialBorderElement" Property="Background" Value="#8F8F8F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel VerticalAlignment="Stretch">
        <!-- Pasek boczny nawigacji -->
        <StackPanel DockPanel.Dock="Left" Width="60" Background="#E5E5E5">
            <Button Content="🌱" ToolTip="Moje rośliny" Width="50" Height="50" Margin="5" Background="#81C784" Click="OnMyPlantsClick"/>
            <Button Content="💧" ToolTip="Plan nawodnienia" Width="50" Height="50" Margin="5" Background="#81C784" Click="OnWateringPlanClick"/>
            <Button Content="📚" ToolTip="Biblioteka roślin" Width="50" Height="50" Margin="5" Background="#81C784" Click="OnPlantLibraryClick"/>
            <Button Content="🔧" ToolTip="Ustawienia" Width="50" Height="50" Margin="5" Background="#81C784" Click="OnSettingsClick"/>
            <Button Content="❓" ToolTip="Pomoc" Width="50" Height="50" Margin="5" Background="#81C784"/>
        </StackPanel>

        <Grid Background="White">
            <!-- Kontrolka ListView dla "Moje rośliny" -->
            <ListView x:Name="MyPlantsListView" Visibility="Collapsed" ItemsSource="{Binding MyPlantsViewModel.MyPlants}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding ImagePath}" Width="50" Height="50" Margin="5"/>
                            <TextBlock Text="{Binding Name}" FontSize="16" VerticalAlignment="Center"/>
                            <Button Content="Usuń" Command="{Binding DataContext.MyPlantsViewModel.RemovePlantCommand, RelativeSource={RelativeSource AncestorType=ListView}}" CommandParameter="{Binding}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Kontrolka ListView dla "Biblioteka roślin" -->
            <ListView x:Name="PlantLibraryListView" Visibility="Collapsed" ItemsSource="{Binding PlantLibraryViewModel.AvailablePlants}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding ImagePath}" Width="50" Height="50" Margin="5"/>
                            <TextBlock Text="{Binding Name}" FontSize="16" VerticalAlignment="Center"/>
                            <Button Content="Dodaj" Command="{Binding DataContext.PlantLibraryViewModel.AddPlantCommand, RelativeSource={RelativeSource AncestorType=ListView}}" CommandParameter="{Binding}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Kontrolka dla Ustawienia -->
            <StackPanel x:Name="SettingsPanel" Visibility="Collapsed">
                <TextBlock Text="Ustawienia" FontSize="20" FontWeight="Bold" Margin="10"/>
                <Slider x:Name="TemperatureSlider" Minimum="0" Maximum="40" TickFrequency="1" Margin="10"/>
                <Slider x:Name="HumiditySlider" Minimum="0" Maximum="100" TickFrequency="5" Margin="10"/>
            </StackPanel>

            <!-- Pasek wyszukiwania dla "Biblioteka roślin" -->
            <TextBox x:Name="SearchBar" Margin="10" Visibility="Collapsed" GotFocus="SearchBar_GotFocus" LostFocus="SearchBar_LostFocus">
                <TextBox.Background>
                    <VisualBrush x:Name="SearchBarWatermark" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                        <VisualBrush.Visual>
                            <Label Content="Wyszukaj roślinę..." Foreground="LightGray" Padding="5,0,0,0"/>
                        </VisualBrush.Visual>
                    </VisualBrush>
                </TextBox.Background>
            </TextBox>



        </Grid>
    </DockPanel>
</metro:MetroWindow>
















